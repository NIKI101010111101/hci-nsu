        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="341">
    <Grid>
        <TextBlock Text="" Background="#FF888888" Margin="30,30,30,331" TextAlignment="Right" Name="output" FontSize="25"/>
