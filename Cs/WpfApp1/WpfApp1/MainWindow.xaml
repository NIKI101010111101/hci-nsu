            <Button Content="3" Height="50" Width="50" Margin="5" FontSize="20" Name="Num3" Click="Num3_Click"/>
            <Button Content="%" Height="50" Width="50" Margin="5" FontSize="20" Click="percent_click"/>
            <Button Content="Pow" Height="50" Width="50" Margin="5" Name="Back" Click="pow_Click"/>
            <Button Content="Clear" Height="50" Width="50" Margin="5" FontSize="18" Name="Clear" Click="Clear_Click"/>
            <Button Content="0" Height="50" Width="50" Margin="5" FontSize="20" Name="Num0" Click="Num0_Click"/>
            <Button Content="," Height="50" Width="50" Margin="5" FontSize="20" Name="comma" Click="comma_Click"/>
            <Button Content="=" Height="50" Width="50" Margin="5" FontSize="20" Name="GetResult" Click="GetResult_Click"/>
            <Button Content="Back" Height="50" Width="50" Margin="5" Name="pow" Click="Back_Click"/>
        </WrapPanel>

    </Grid>
</Window>
