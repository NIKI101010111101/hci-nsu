            <Button Content="7" Height="50" Width="50" Margin="5" FontSize="20" Name="Num7" Click="Num7_Click"/>
            <Button Content="8" Height="50" Width="50" Margin="5" FontSize="20" Name="Num8" Click="Num8_Click"/>
            <Button Content="9" Height="50" Width="50" Margin="5" FontSize="20" Name="Num9" Click="Num9_Click"/>
            <Button Content="*" Height="50" Width="50" Margin="5" FontSize="20" Name="mnog" Click="mnog_Click"/>
            <Button Content="/" Height="50" Width="50" Margin="5" FontSize="20" Name="del" Click="del_Click"/>
            <Button Content="4" Height="50" Width="50" Margin="5" FontSize="20" Name="Num4" Click="Num4_Click"/>
            <Button Content="5" Height="50" Width="50" Margin="5" FontSize="20" Name="Num5" Click="Num5_Click"/>
            <Button Content="6" Height="50" Width="50" Margin="5" FontSize="20" Name="Num6" Click="Num6_Click"/>
            <Button Content="-" Height="50" Width="50" Margin="5" FontSize="20" Name="Minus" Click="Minus_Click"/>
