<Window x:Class="Date.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Date"
        mc:Ignorable="d"
        Title="Date" Height="500" Width="530">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите дату:" FontSize="16" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="DayBox" Width="60" Margin="0,0,5,0" Text="1"/>
            <TextBlock Text="." VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="MonthBox" Width="60" Margin="0,0,5,0" Text="1"/>
            <TextBlock Text="." VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="YearBox" Width="366" Text="2025"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Проверить дату" Click="ValidateButton_Click" Padding="10"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,10">
            <Button Content="Следующий день" Click="NextButton_Click" Margin="0,0,5,0" Padding="5,2"/>
            <Button Content="Предыдущий день" Click="PrevButton_Click" Margin="0,0,5,0" Padding="5,2"/>
            <TextBox x:Name="NBox" Width="50" Text="5" Margin="0,0,5,0"/>
            <Button Content="Вперёд на N дней" Click="ForwardButton_Click" Margin="0,0,5,0" Padding="5,2"/>
            <Button Content="Назад на N дней" Click="BackwardButton_Click" Padding="5,2"/>
        </StackPanel>

        <TextBox Grid.Row="4" x:Name="OutputBox" IsReadOnly="True" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="14"/>
    </Grid>
</Window>
